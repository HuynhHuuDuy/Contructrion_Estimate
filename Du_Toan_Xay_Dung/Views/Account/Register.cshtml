@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="register-box">
        <div class="register-logo">
            <p>Đăng Kí</p>
        </div>

        <div class="register-box-body">
            <form action="/Account/Post_Register" method="post" enctype="multipart/form-data">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Họ" name="FirstName">
                </div>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Tên" name="LastName">
                </div>
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Email" name="Email">
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="matkhau" class="form-control" placeholder="Mật khẩu" name="Password">
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="matkhau1" class="form-control" onkeyup="ValidatePass()" placeholder="Nhập lại mật khẩu" name="Re-Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span id="verify" class="text-danger"></span>
                    <span id="verify1" class="text-success"></span>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng Kí</button>
                    </div><!-- /.col -->
                </div>
            </form>
        </div><!-- /.form-box -->
    </div>
</div>
<script>
    function ValidatePass() {
        var pass1 = document.getElementById("matkhau").value;
        var pass2 = document.getElementById("matkhau1").value;
        if (pass1 != pass2) {
            document.getElementById("verify").innerHTML = "Không khớp mật khẩu";
            document.getElementById("verify1").innerHTML = "";
        }
        else {
            document.getElementById("verify1").innerHTML = "Mật khẩu trùng khớp";
            document.getElementById("verify").innerHTML = "";
        }
    }

</script>
