<body id="body">

    <div class="loader" id="loader" style="position: fixed; top: 200px;left: 600px;z-index: 99;opacity: 1;"></div>

    @* set css opacity: 0.3, pointer-events: none; *@
    <div id="wrapper">
        <!--header-->
        <header>
            <div id="logo" class="container">
                <h1><a href="#">Dự Toán Xây Dựng</a></h1>
                @*<p>Vươn lên tầm cao mới</p>*@
