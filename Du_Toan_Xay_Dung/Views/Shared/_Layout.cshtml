                            <li id="li_congtrinh"><a href="/CongTrinh/Index">Công Trình</a></li>
                            <li><a href="/WorkTemporary/Index">Tạm Tính</a></li>
                            <li><a href="/UnitPrice/Index">Đơn Giá</a></li>
                        }
                        <li><a href="/News/Index">Tin Tức</a></li>
                        <li><a href="/ContactUs/Index">Liên Hệ</a></li>
                        @if (SessionHandler.User == null)
                        {
                            <li><a href="/Account/Login">Đăng Nhập</a></li>
                        }
                        else
                        {
                            <li><a href="/Account/Logout">Đăng Xuất</a></li>
                        }

                    </ul>
                </div>
            </div>
        </header>

        <!--body-->
